<!DOCTYPE html>
<html>
<head>
  <title>Discotheque</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <notifications>
    <div>
    <% if notice %><p class="notice"><%= notice %></p><% end %>
    <% if alert %><p class="alert"><%= alert %></p><% end %>
    </div>
  </notifications>
  <status>
    <div>
      <% if user_signed_in? %>
      <box class="left"><%= link_to "Add New Album", new_album_path %></box>
      <box class="right">You are now logged in as <%= current_user.name || current_user.email %> (<%= link_to 'Account', edit_user_registration_path %>) | <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></box>
      <% end %>
    </div>
  </status>
  <header class="logo-wrap">
    <p class='logo top'><%= link_to 'Discotheque', root_path %></p>
  </header>

<%= yield %>

</body>
</html>
