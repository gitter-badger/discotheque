<div class="main-form">
  <h2>Add New Album</h2>

  <%= form_for(@album, :url => albums_path) do |f| %>
    <%= error_messages_for @album %>

    <div><%= f.label :band %><br />
    <%= f.text_field :band %></div>
    
    <div><%= f.label :title %><br />
    <%= f.text_field :title %></div>
    
    <div><%= f.label :year %><br />
    <%= f.number_field :year, :min => 1900, :max => 2013 %></div>
    
    <div><%= f.label :cover %><br />
    <%= f.file_field :cover %></div>

    <div><%= f.submit "Add Album" %></div>
  <% end %>

  <div class="form-botton-links">
    <%= link_to "Cancel", albums_path %>
  </div>
</div>